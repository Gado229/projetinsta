<header>
  <div class="head">
    <%= link_to blogs_path do %>
      <%= image_tag "logo.png", class: 'insta_logo' %>
    <% end %>

    <span><%= image_tag "recherche.png", class: 'recherche' %>rechercher</span>
    <%= link_to "#" do %>
      <%= image_tag "home.png", class: 'icon' %>
      <%= image_tag "add.png", class: 'icon' %>
      <%= image_tag "messenger.png", class: 'icon' %>
      <%= image_tag "explore.png", class: 'icon' %>
      <%= image_tag "like.png", class: 'icon' %>
      <%= image_tag "user.png", class: 'icon' %>
    <% end %>
  </div>
</header>

<div class="signup_box">
  <h1>Profil de <%= @user.name %></h1>
  <% if current_user.id == @user.id %>
    <p><%= link_to "Edite", edit_user_path(@user.id) %></p>
  <% end %>

  <% if @user.image.file.nil? %>
    <%= image_tag 'no_profile_pic_big.png', class: 'profile_img' %>
    <% else %>
    <%= image_tag @user.image.url, class: 'profile_img' %>
  <% end %><br><br>

  <% if current_user.id == @user.id %>
    <p><%= link_to "Postes Favoris", likes_user_path(current_user.id) %></p>
    <p><%= link_to "Revenir", blogs_path %></p>
    <p><%= link_to "Se deconnecter", session_path(current_user.id), method: :delete %></p>
  <% end %>
</div>
