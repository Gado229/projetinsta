<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2>Vous avez fais<%= @blog.errors.count %> Erreur(s)</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>
      <%= form.label :image, "Image" %>
    </p>
    <p>
      <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
    </p>
  </div>
  <div class="blog_content">
    <p>
      <%= form.label :content %>
    </p>
    <p>
      <%= form.text_field :content, size: :"100*50" %>
    </p>
  </div>
  <p><%= form.submit "Publier"%></p>
<% end %>
<p><%= link_to "Revenir", blogs_path %></p>
